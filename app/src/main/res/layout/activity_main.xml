<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online Order Demo"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Order:"
        android:layout_below="@id/t1"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="30sp"/>

    <CheckBox
        android:id="@+id/c1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="Burger + $50"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/c2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/c1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="Pizza + $50"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/c3"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/c2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="Tea + $10"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/c4"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/c3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="Coffee + $20"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/c4"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25sp"
        android:text="ORDER"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#ACA6A6" />

</RelativeLayout>